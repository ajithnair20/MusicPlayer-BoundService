<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioTrackActivity">

    <Button
        android:id="@+id/startServiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="97dp"
        android:text="Start Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopServiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="97dp"
        android:text="Stop Service"
        app:layout_constraintStart_toEndOf="@+id/startServiceBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioTrack"
        android:layout_width="109dp"
        android:layout_height="200dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startServiceBtn">

        <RadioButton
            android:id="@+id/radioTrack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Track 1" />

        <RadioButton
            android:id="@+id/radioTrack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track 2" />

        <RadioButton
            android:id="@+id/radioTrack3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Track 3" />

        <RadioButton
            android:id="@+id/radioTrack4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track 4" />

        <RadioButton
            android:id="@+id/radioTrack5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Track 5" />

        <RadioButton
            android:id="@+id/radioTrack6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Track 6" />

    </RadioGroup>

    <Button
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="366dp"
        android:text="Play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startServiceBtn" />

    <Button
        android:id="@+id/pauseResumeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="82dp"
        android:text="Pause"
        app:layout_constraintStart_toEndOf="@+id/playBtn"
        app:layout_constraintTop_toBottomOf="@+id/radioTrack" />

    <Button
        android:id="@+id/stopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="366dp"
        android:text="Stop"
        app:layout_constraintStart_toEndOf="@+id/pauseResumeBtn"
        app:layout_constraintTop_toBottomOf="@+id/stopServiceBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>